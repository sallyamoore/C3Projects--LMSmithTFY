<body class="search-results">
  <p>best matches:</p>
  <% @songs.each do |song| %>
    <p class="title"><%= song.title.upcase %></p>
    <p class="details">album(s):
        <% albums = [] %>
        <% song.albums.each do |album| %>
          <% albums << "#{album.name}, (#{album.year})" %>
        <% end %>
        <%= albums.join("; ") %>
    </p>
  <% end %>

  <div hidden class="api-preview">
    <% unless @data.empty? %>
      <%= @data[:data]["previewUrl"] %>
    <% end %>
  </div>
  <div hidden class="api-track">
    <% unless @data.empty? %>
      <%= @data[:data]["trackViewUrl"] %>
    <% end %>
  </div>

</body>
